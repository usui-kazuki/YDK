<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1>


<table>

  <thead>
    <tr>
      <th>完了</th>
      <th>期日</th>
      <th>予定</th>
      <th>カテゴリー</th>
      <th>ユーザー</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.done %></td>
        <td><% if task.due_date < Date.today && task.done = true %>
              <font color="red"><%= task.due_date %></font>
            <% else %>
              <%= task.due_date %>
            <% end %></td>
        <td><%= task.name %></td>
        <td><%= task.category.categoryname %></td>
        <td><%= task.user_id %></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: "『#{task.name}』を消してもいいですか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

